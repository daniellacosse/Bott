{
  "tasks": {
    "reset:app": "cd app && deno task reset",
    "start:app": "cd app && deno task start",
    "start": "docker build -t bott . && docker run -p 8080:8080 --env-file=.env.production bott",
    "deploy": "sh ./deploy.sh"
  },
  "workspace": [
    "./data",
    "./helpers/gemini",
    "./helpers/discord",
    "./app"
  ],
  "fmt": {
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "always",
    "semiColons": true
  }
}

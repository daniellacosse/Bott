{
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "proseWrap": "always",
    "semiColons": true,
    "singleQuote": false
  },
  "tasks": {
    "build": "docker build -t bott .",
    "reset": "rm -rf ./fs_root",
    "setup": "brew bundle && gcloud auth login",
    "start:dev": "deno run --allow-all --env-file=.env.development ./app/main.ts",
    "start": "deno task build && docker run --rm --env-file .env.development -p 8080:8080 -v \"$(pwd)/fs_root:/app/fs_root\" bott"
  },
  "workspace": [
    "./model",
    "./libraries/storage",
    "./libraries/task",
    "./libraries/gemini",
    "./libraries/discord",
    "./app"
  ]
}
